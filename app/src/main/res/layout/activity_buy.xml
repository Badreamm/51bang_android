<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.xcom.helper.activity.BuyActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:text="确认订单"
        android:textSize="17dp"
        android:textColor="@color/colorTextWhite"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_marginTop="-35dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_back_white_left"
            />
    </RelativeLayout>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="10dp"-->
      <!-->-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/buy_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18865623000"
            android:textSize="20sp"
            android:textColor="@color/colorTextSale"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ece6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="￥0.01"
            android:textColor="@color/colorTextSale"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ece6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_marginLeft="200dp"
            android:id="@+id/btnDecrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_amount"
            android:text="-"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minWidth="60dp"
            android:textColor="@color/colorTextSale"
            android:background="@null"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1"/>

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:background="@drawable/btn_amount"
            android:text="+"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ece6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/buy_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0.01"
            android:textColor="#e6951b"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ece6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用方式"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
           android:id="@+id/buy_deliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="同城自取"
            android:textColor="@color/colorTextSale"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ece6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家留言"
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/buy_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="您可以在此留言"
            android:inputType="text"
            android:background="@drawable/bt_edit"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textColor="@color/colorTextSale"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="220dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ece6e6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
    <RelativeLayout
        android:id="@+id/buy_commit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/colorHelpMe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交订单"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    </RelativeLayout>
        </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>
