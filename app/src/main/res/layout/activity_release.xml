<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.xcom.helper.activity.ReleaseActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17dp"
            android:text="@string/tv_i_relsase_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_i_help_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-10dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>
    <EditText
        android:id="@+id/goodName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/tv_i_relsase_good"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e4e0e0"></View>
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/tv_i_relsase_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:background="@null"/>

    <LinearLayout
        android:id="@+id/image_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">
        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridview"
             android:horizontalSpacing="5dp"
            android:numColumns="6">

        </GridView>
    </LinearLayout>
    <ImageView
        android:id="@+id/tupian"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dip"
        android:src="@mipmap/ic_tupian"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/divide">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_i_relsase_divide"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#201717"
            android:textSize="18sp"/>
        <!--<ImageView-->
            <!--android:id="@+id/ima_dissmis"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@mipmap/ic_arrow_right"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginLeft="280dp"/>-->
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="180dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_divide"
            android:textSize="18sp"
            android:text="@string/tv_i_relsase_choose"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#201717"
            android:text="@string/tv_i_relsase_price"/>
        <EditText
            android:id="@+id/ed_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tv_i_relsase_printprice"
            android:background="@null"
            android:layout_marginLeft="220dp"
            android:layout_gravity="center"
            android:textColor="#a19e9e"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#201717"
            android:layout_marginLeft="10dp"
            android:text="@string/tv_i_relsase_oldprintprice"/>
        <EditText
            android:id="@+id/ed_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tv_i_relsase_printprice"
            android:background="@null"
            android:layout_marginLeft="220dp"
            android:layout_gravity="center"
            android:textColor="#a19e9e"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_i_relsase_location"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#201717"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/ed_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入位置"
            android:background="@null"
            android:layout_marginLeft="220dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:id="@+id/transport"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_i_relsase_transport"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#201717"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/id_dismiss11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_arrow_right"
            android:layout_gravity="center"
            android:layout_marginLeft="250dp"/>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_transport"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <LinearLayout
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_i_relsase_contactPhone"
            android:textSize="18sp"
            android:textColor="#201717"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
       <TextView
           android:id="@+id/telephone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="18865623775"
           android:textColor="#201717"
           android:layout_gravity="center"
           android:textSize="18sp"
           android:layout_marginLeft="180dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e0e0"></View>
    <Button
        android:id="@+id/bt_login_release"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"
        android:text="@string/tv_i_relsase_release"
        android:textSize="16dp"
        android:textColor="@color/colorTextWhite"
        android:background="@drawable/bt_login_click"/>
</LinearLayout>
